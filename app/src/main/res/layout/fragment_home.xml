<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/beauty"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_finance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:gravity="center"
                android:drawableTop="@drawable/lol"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:singleLine="true"
                android:textColor="#212121"
                android:textSize="18sp"
                android:text="张不二金融" />

            <!--<View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/light_grey_1" />-->

            <TextView
                android:id="@+id/tv_news"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:gravity="center"
                android:drawableTop="@drawable/nba"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:singleLine="true"
                android:textColor="#212121"
                android:textSize="18sp"
                android:text="张不二新闻" />

            <!--<View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/light_grey_1" />-->

            <TextView
                android:id="@+id/tv_mall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:gravity="center"
                android:drawableTop="@drawable/nizhan"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:singleLine="true"
                android:textColor="#212121"
                android:textSize="18sp"
                android:text="张不二商城" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_plane"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:gravity="center"
            android:drawableTop="@drawable/dnf"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColor="#212121"
            android:textSize="18sp"
            android:text="游戏" />

        <!--<View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/light_grey_1" />-->

        <TextView
            android:id="@+id/tv_func"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:gravity="center"
            android:drawableTop="@drawable/codol"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColor="#212121"
            android:textSize="18sp"
            android:text="快速开发" />

        <!--<View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/light_grey_1" />-->

        <TextView
            android:id="@+id/tv_douyin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:gravity="center"
            android:drawableTop="@drawable/cf"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColor="#212121"
            android:textSize="18sp"
            android:text="抖音" />
    </LinearLayout>



</LinearLayout>